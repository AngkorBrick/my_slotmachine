<%= content_for :contents do %>
<div class="ui-corner-all custom-corners">
	  <div class="ui-bar ui-bar-a">
	    <h3>Administrator Area</h3>
	  </div>
	  <div class="ui-body ui-body-a">
			<div class="ui-field-contain">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                    <%= f.email_field :email, { :placeholder=> "Email","data-clear-btn"=>true } %>
               		<%= f.password_field :password,{ :placeholder=> "Password","data-clear-btn"=>true }%>                  
                  	<%= f.submit "Sign in",{:class=>"ui-shadow ui-btn ui-corner-all"} %>
                  <!--
					  <% if devise_mapping.rememberable? -%>
					    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
					  <% end -%>
					-->
          <% end %>
          </div>
		</div>
	</div>
<%= render "devise/shared/links" %>
<%end%>